h1 Update user

form(action="", method="POST", enctype="multipart/form-data")
    label Name
    input(type="text" name="name" value=tempUser.name)
    hr
    label Phone
    input(type="text" name="phone" value=tempUser.phone)
    hr
    label Email
    input(type="text" name="email" value=tempUser.email)
    hr
    label Password
    input(type="password" name="password")
    hr
    label Avatar
    input(type="file" name="avatar" value=tempUser.avatar)
    hr
    button Update